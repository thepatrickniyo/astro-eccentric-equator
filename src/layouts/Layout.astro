---
//  import "../styles/global.css";
 interface Props {
	title: string;
	description?: string;
	image?: string;
 }
 const { title, description="A community of music producers and enthusiasts", image="/images/band.jpg" } = Astro.props;
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="description" content={description} />
		<meta name="og:image" content={image} />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
